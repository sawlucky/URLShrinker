<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-md">
      <h1>Url Shortner</h1>
      <form action="/shortUrl" method="post">
        <label for="url" class="sr-only">Enter URL:</label><br />
        <input type="text" class="form-floating mb-3" name="fullUrl" />
        <button type="submit" class="btn btn-success">Shorten!</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>URL</th>
            <th>Short URL</th>
            <th>clicks</th>
          </tr>
        </thead>
        <tbody>
          <% ShortedURL.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.url %>"><%= shortUrl.url %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.click %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
